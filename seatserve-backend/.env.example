# Backend Environment Variables (copy to .env file in seatserve-backend/)
# ⚠️ IMPORTANT: Never commit .env to version control
# ⚠️ IMPORTANT: Generate strong random values for all SECRET keys in production

# Django Settings
SECRET_KEY=your-unique-django-secret-key-change-in-production
JWT_SECRET_KEY=your-unique-jwt-secret-key-separate-from-django
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for development)
# DATABASE_URL=sqlite:///db.sqlite3

# Database (PostgreSQL for production - RECOMMENDED)
# DB_NAME=seatserve
# DB_USER=postgres
# DB_PASSWORD=your_secure_password_here
# DB_HOST=localhost
# DB_PORT=5432

# Stripe Payment Gateway (REQUIRED - no defaults in production)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend URL (for payment redirects)
FRONTEND_URL=http://localhost:3000

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production with Gmail:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Redis (for Celery and caching)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
